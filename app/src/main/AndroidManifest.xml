<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tictactoe">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_tic_tac_toe_hand_drawn_game"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_tic_tac_toe_hand_drawn_game"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MultiplayerOnline"></activity>
        <activity android:name=".MultiplayerOffline" />
        <activity android:name=".MainActivity" />
        <activity android:name=".GameModeSelect">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>