<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play AGAIN"
        android:onClick="btnplayagain"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UNDO"
        android:layout_alignParentRight="true"
        android:onClick="undo"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ll1"
        android:gravity="center">
        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/btn1"
            android:padding="5dp"
            android:onClick="buclick"/>
        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/btn2"
            android:padding="5dp"
            android:onClick="buclick"/>
        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/btn3"
            android:padding="5dp"
            android:onClick="buclick"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ll2"
        android:gravity="center">
        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/btn4"
            android:padding="5dp"
            android:onClick="buclick"/>
        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/btn5"
            android:padding="5dp"
            android:onClick="buclick"/>
        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/btn6"
            android:padding="5dp"
            android:onClick="buclick"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ll3"
        android:gravity="center">
        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/btn7"
            android:padding="5dp"
            android:onClick="buclick"/>
        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/btn8"
            android:padding="5dp"
            android:onClick="buclick"/>
        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/btn9"
            android:padding="5dp"
            android:onClick="buclick"/>

    </LinearLayout>


</LinearLayout>